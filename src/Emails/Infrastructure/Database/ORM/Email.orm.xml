<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Emails\Domain\Entity\Email" table="emails">
    <id name="ulid" type="string" column="ulid">
      <generator strategy="NONE"/>
    </id>
    <field name="address" type="string" length="320" nullable="false"/>
    <field name="theme" type="string" length="500" nullable="false"/>
    <field name="content" type="text" nullable="false"/>
    <field name="created_at" type="datetime" nullable="false"/>
    <field name="updated_at" type="datetime" nullable="true"/>
    <many-to-one field="emailStatusId" target-entity="EmailStatus" fetch="EAGER">
      <join-column name="email_status_id" referenced-column-name="id" nullable="false"/>
    </many-to-one>
  </entity>
</doctrine-mapping>

